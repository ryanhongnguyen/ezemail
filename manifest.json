
{
    "name": "Gmail Digest Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Chrome extension to generate an email digest",
    "permissions": ["identity", "storage"],
    "oauth2": {
      "client_id": "606476731366-tqvc5q69abh2mlbcpbm0t1nqcbps4fm6.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/gmail.readonly"
      ]
    },
    "host_permissions": [
      "https://gmail.googleapis.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "40": "assets/icon40.png",
        "48": "assets/icon48.png",
        "120": "assets/icon120.png"
      }
    }
  }
  